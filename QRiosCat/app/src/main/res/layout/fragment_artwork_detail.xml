<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irahavoi.qrioscat.ArtworkDetailActivityFragment"
    android:orientation="vertical">
        
    <ImageView
        android:id="@+id/artworkImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:src="@drawable/monalisa"
        android:background="@color/background_material_dark" />

    <LinearLayout
        android:id="@+id/artworkToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/commentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_36dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:alpha="0.3"/>
    </LinearLayout>

    <View
        style="@style/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip" />


    <!-- Mock Comments -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is impressive"
            android:layout_marginRight="24dp"/>
        <ImageView
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:alpha="0.3"/>
    </RelativeLayout>
    <View
        style="@style/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In 1956, part of the painting was damaged when a vandal threw acid at it."
            android:layout_marginRight="24dp"/>
        <ImageView
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:alpha="0.3"/>
    </RelativeLayout>
    <View
        style="@style/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dip" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"/>


</LinearLayout>
